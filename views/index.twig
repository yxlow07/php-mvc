{% extends 'user_layout.twig' %}
{% block title %}Homepage{% endblock %}
{% block content %}
    <div class="flex-1 flex items-center justify-center overscroll-none" id="content">
        <div class="text-center">
            <p class="text-gray-600 dark:text-gray-300 mb-8">Please use the buttons below to navigate the system</p>
            <div class="flex justify-between">
                {% for route, values in app.nav %}
                    <div class="hs-tooltip flex flex-col items-center">
                        <a class="c-nav-items-tooltip hs-tooltip-toggle" href="{{ path(route) }}">
                            {% if values.2 %}
                                <span class="fa-stack {% if app.request.path == route %} current-page fa-beat {% endif %}">
                                        <i class="fa-duotone fa-xl fa-{{ values.0[0] }} fa-stack-1x"></i>
                                        <i class="fa-duotone fa-{{ values.0[1] }} fa-stack-4x text-teal-400" style="position: absolute; bottom: -5px; right: -5px;"></i>
                                    </span>
                            {% else %}
                                <i class="fa-duotone fa-xl fa-{{ values.0 }} {% if app.request.path == route %} fa-beat current-page {% endif %}"></i>
                            {% endif %}
                        </a>
                        <div class="pt-3 mx-2">
                            <a href="{{ path(route) }}" class="c-links"><span>{{ values.1 }}</span></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}